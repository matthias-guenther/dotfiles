if [[ "$OSTYPE" -eq "linux-gnu" ]]
then
  alias ebashrc='gvim $HOME/.bashrc'
elif [[ "$OSTYPE" -eq "darwin10.0" ]]
then
  alias ebashrc='gvim $HOME/.bash_profile'
fi

