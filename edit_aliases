alias eprogramaliaseslinux='vim $HOME/.program_aliases_linux'
alias eprogramaliasesmac='vim $HOME/.program_aliases_mac'
alias eunusedterms='vim $HOME/.unused_terms'

if [[ "$OSTYPE" -eq "linux-gnu" ]]
then
  alias ebashrc='g $HOME/.bashrc'
elif [[ "$OSTYPE" -eq "darwin10.0" ]]
then
  alias ebashrc='g $HOME/.bash_profile'
fi

