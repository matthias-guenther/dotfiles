# Startup commands {{{
exec --no-startup nm-applet

# }}}
# Define the global mod key to the windows key shortcut {{{
set $mod Mod4
# }}}
# Font for window titles => this is mainly taken from the standard configuration {{{
# font for window titles. ISO 10646 = Unicode
font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

font pango:DejaVu Sans Mono 30
font pango:DejaVu Sans Mono, Terminus Bold Semi-Condensed 16

# workspace and terminal sizes
font pango:Terminus 9px
# }}}
# Setting for floating windows {{{
# Default settings from the wizzard
# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# also the following settings are causing trouble
# no limits when you are in floating mode when you are
floating_minimum_size -1 x -1
floating_maximum_size -1 x -1
# }}}
# Orientation for new workspaces {{{
default_orientation vertical
# }}}
# Layout mode for new container {{{
# them, that's why I take the default layout
workspace_layout default
# }}}
# Border style of new windows {{{
new_window normal
# }}}
# Assign programs on certain workspaces {{{
# use xprop to get the name of the window names
# this doesn't seems to work on work ... :)
assign [class="^Firefox$"] 2
assign [class="^Chromium-browser$"] 2
assign [class="^Thunderbird$"] 3
assign [class="^Skype$"] 3
assign [class="^Gimp$"] 5
assign [class="^Inkscape$"] 5

# }}}
# Custom window settings {{{
for_window [class="^Gimp$"] floating enable
for_window [class="^Inkscape$"] floating enable
# }}}
# Popups during fullscreen {{{
popup_during_fullscreen ignore
# }}}
# Mappings {{{
# Enter fullscreen mode for the focused container {{{
bindsym $mod+f fullscreen
# }}}
# Auto back-and-forth jumping when switching workspaces `Mod-Tab` {{{
# jump from "1: www" to "2: IM" => press `Mod-2` will go back to 1
workspace_auto_back_and_forth yes
bindsym $mod+Tab workspace back_and_forth
# }}}
# Change container layout (stacked, tabbed, toggle split) bindsym $mod+Shift+s layout stacking {{{
bindsym $mod+s layout stacked
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
# }}}
# Change focus between tiling / floating windows {{{
bindsym $mod+space focus mode_toggle
# }}}
# Toggle tiling / floating bindsym $mod+Shift+space floating toggle {{{
bindsym $mod+Shift+space floating toggle
# }}}
# Take a screenshot under /tmp with `Mod-x` {{{
# bindsym --release $mod+x exec --no-startup-id import /tmp/latest-screenshot.png
bindsym --release $mod+x exec --no-startup-id scrot -e 'mv $f /tmp/'
# }}}
# Start a terminal ... `Mod-Return` {{{
bindsym $mod+Return exec xfce4-terminal
# }}}
# Kill focused window ... `Mod-Shift-q {{{
bindsym $mod+Shift+q kill
# }}}
# start dmenu (a program launcher) {{{
bindsym $mod+d exec dmenu_run
# }}}
# Change focus the vim way {{{
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
# }}}
# Lockscreen {{{
bindsym $mod+q exec i3lock -c 111111 -d
# }}}
# Restart i3 inplace (preserves your layout/session) {{{
bindsym $mod+Shift+r restart
# }}}
# Exit i3 (logs you out of your X session) {{{
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
# }}}
# Make a horziontal or vertical split for the next open window `Mod+Shift+h|v`
bindsym $mod+Shift+h split v
bindsym $mod+Shift+v split h
# }}}
# Workspace switching {{{
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
# }}}
# Move focused container to workspace {{{
bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
# }}}
# resize window (you can also use the mouse for that) {{{
mode "resize" {
  # Press `Mod-r` to get into resize mode
  # These bindings trigger as soon as you enter the resize mode
  bindsym h resize grow width 10 px or 10 ppt
  bindsym j resize grow height 10 px or 10 ppt
  bindsym k resize shrink height 10 px or 10 ppt
  bindsym l resize shrink width 10 px or 10 ppt

  # same bindings, but for the arrow keys
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"
# }}}
# Statusline elements {{{
bar {
  status_command i3status
  mode dock    # always show the dock menu
  position top # put the window menu at the top
  font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
  font pango:DejaVu Sans Mono 10
  workspace_buttons yes # display workspace buttons
}
# }}}

