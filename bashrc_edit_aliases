# Bash-Dotfiles editing {{{

alias econvert='vim $HOME/.convert'
alias ebashcopy='vim $HOME/.bashrc_copy'
alias edirectoriesaliases='vim $HOME/.directory_aliases'
alias ebasheditaliases='vim $HOME/.bashrc_edit_aliases'
alias efunctions='vim $HOME/.functions'
alias efunctionslinux='vim $HOME/.functions_linux'
alias elatexconvertaliases='vim $HOME/.latex_convert_aliases'
alias emiscellaneous='vim $HOME/.miscellaneous'
alias ebashprofile='vim $HOME/.bash_profile'
alias eprogramaliaseslinux='vim $HOME/.program_aliases_linux'
alias eprogramaliasesmac='vim $HOME/.program_aliases_mac'

if [[ "$OSTYPE" -eq "linux-gnu" ]]
then
  alias ebashrc='g $HOME/.bashrc'
elif [[ "$OSTYPE" -eq "darwin10.0" ]]
then
  alias ebashrc='g $HOME/.bash_profile'
fi

# }}}
