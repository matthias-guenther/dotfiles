  \multiply\@tempcnta100\advance\@tempcntb-\@tempcnta
  \@tempcnta\@tempcntb\divide\@tempcnta10 \the\@tempcnta
  \multiply\@tempcnta10\advance\@tempcntb-\@tempcnta 
  \the\@tempcntb
}
